mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PATH=~/bin:$PATH && cd /home/runner/workspace && node dist/main"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
